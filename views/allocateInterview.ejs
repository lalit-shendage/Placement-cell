<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />
    <title>Schedule Interview</title>
  </head>

  <body>
    <%- include('navbar') %>
<div class="container">
  <div class="form-group my-3">
    <form
      class=""
      action="/company/schedule-interview"
      method="post"
      style="height: 70vh; display: flex; flex-direction: column; justify-content: space-between; align-items: center;"
    >
      <h3 style="margin: 10px;">Schedule Interview</h3>

      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <select
          class="form-select "
          aria-label="Default select example"
          name="id"
          id="name"
        >
        <option selected disabled>Select Student</option>

        <%for(let student of students){%>
        <option value="<%=student.id%>"><%= student.name %></option>
        <%}%>
      </select></select>
      </div>

      <div class="mb-3">
        <label for="company" class="form-label">Company</label>
        <input
          type="text"
          class="form-control"
          id="company"
          name="company"
        />
      </div>

      <div class="mb-3">
        <label for="date" class="form-label">Date</label>
        <input
          type="date"
          class="form-control"
          id="date"
          name="date"
        />
      </div>

          <button class="btn btn-primary align-self-center">
            Schedule Interview
          </button>
    </form>
  </div>
  </div>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
    crossorigin="anonymous"
  ></script>
  </body>
</html>
