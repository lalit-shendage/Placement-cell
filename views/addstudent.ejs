<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>studentlist </title>
    <link rel="stylesheet" href="/static/css/style.css">
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
    crossorigin="anonymous"
  />
</head>
<body>
    <%- include('navbar') %>
    
    <div class="container w-50 p-3">
      <h3>Add Student</h3>
    <div class="form-group">
    <form action="/students/createstudent" method="POST">
      <div class="form-control d-flex justify-content-between">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required></div>
        <div class="form-control d-flex justify-content-between">
        <label for="batch" >Batch:</label>
        <input type="text" id="batch" name="batch" required></div>
        <div class="form-control d-flex justify-content-between">
        <label for="college">College:</label>
        <input type="text" id="college" name="college" required></div>
        <div class="form-control d-flex justify-content-between">
        <label for="status">Status:</label>
        <select id="status" name="status">
          <option value="placed">placed</option>
          <option value="not placed">not placed</option>
          
        </select></div>
        <div class="form-control d-flex justify-content-between">
        <label for="dsaScore">DSA Score:</label>
        <input type="number" id="dsaScore" name="dsaScore" required></div>
        <div class="form-control d-flex justify-content-between">
        <label for="webDScore">WebD Score:</label>
        <input type="number" id="webDScore" name="webDScore" required></div>
        <div class="form-control d-flex justify-content-between">
        <label for="reactScore">React Score:</label>
        <input type="number" id="reactScore" name="reactScore" required></div>
        <div class="my-3">
        <button type="submit"  class="btn btn-primary tect-light">Add Student</button></div>
      </form>
      </div>
    </div>
      <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
</body>
</html>