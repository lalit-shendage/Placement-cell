<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />

    <title>studentlist</title>
    <link rel="stylesheet" href="/static/css/style.css" />
  </head>
  <body>
    <%- include('navbar') %>
    <div class="container">
      <h1>Student List</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">name</th>
            <th scope="col">batch</th>
            <th scope="col">status</th>
            <th scope="col">details</th>

            <th scope="col">delete</th>
          </tr>
        </thead>
        <% students.forEach(student => { %>
        <tbody>
          <tr>
            <th scope="row"><%= student.name %></th>
            <td><%= student.batch %></td>
            <td><%= student.status %></td>
            <td>
              <a href="/students/details/<%=student.id%>" class="text-dark"
                ><button class="btn btn-warning">details</button></a
              >
            </td>
            <td>
              <a href="/students/delete/<%=student.id%>" class="text-light"
                ><button class="btn btn-danger">delete</button></a
              >
            </td>
          </tr>
        </tbody>

        <% }) %>
      </table>
      <button class="btn btn-primary">
        <a class="nav-link text-light" href="students/create">Add student</a>
      </button>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
